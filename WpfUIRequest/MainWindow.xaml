<Window x:Class="WpfUIRequest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUIRequest"
        mc:Ignorable="d"
        Title="Major Express Заявки" Height="400" Width="950">
    <Grid>
        <TabControl x:Name="TabCntrl" Background="Black" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Заявки" Foreground="#535353">
                <Grid Background="#363636">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="MainTable" AutoGenerateColumns="False" Grid.Column="0" Foreground="#DEA558" d:ItemsSource="{d:SampleData ItemCount=5}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="Auto"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding statusName}" Width="Auto"/>
                            <DataGridTextColumn Header="ФИО клиента" Binding="{Binding clientFIO}" Width="*"/>
                            <DataGridTextColumn Header="ФИО курьера" Binding="{Binding fio}" Width="*"/>
                            <DataGridTextColumn Header="Адрес" Binding="{Binding address}" Width="2*"/>
                            <DataGridTextColumn Header="Текст заявки" Binding="{Binding text}" Width="*"/>
                            <DataGridTextColumn Header="Причина отмены" Binding="{Binding canceledText}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DockPanel Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition  Height="100" />
                                <RowDefinition  Height="30" />
                                <RowDefinition  Height="30" />
                                <RowDefinition  Height="30" />
                                <RowDefinition  Height="20" />
                                <RowDefinition  Height="*" />
                                <RowDefinition  Height="*" />
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Content="Поиск" HorizontalAlignment="Stretch" Height="20" Width="50" Margin="130,35,0,0" VerticalAlignment="Top" Click="Button_Click_Find"/>
                            <Button Grid.Row="1" Content="Загрузить все" Height="20" Width="95" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click"/>
                            <Button Grid.Row="2" Content="Изменить" Height="20" Width="95" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click_Edit"/>
                            <Button Grid.Row="3" Content="Удалить" Height="20" Width="95" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click_Delete"/>
                            <CheckBox Grid.Row="4" Content="Отображать логи" IsChecked="True" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Log_SelectionChanged" x:Name="IsLog"/>
                            <TextBox HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="" TextAlignment="Center" VerticalAlignment="Top" Width="178" x:Name="FindTxt"/>
                            <TextBlock Grid.Row="5" Text="" TextWrapping="Wrap"  HorizontalAlignment="Center" Height="60" VerticalAlignment="Center" Width="170" Margin="5, 10, 0, 0" Foreground="LightGray" x:Name="OutTxt"/>
                            <Image Grid.Row="6" HorizontalAlignment="Center" Height="40" Margin="5,5,0,0" VerticalAlignment="Center" Width="100" Source="/Major.jpg"/>
                        </Grid>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Создание заявки" Foreground="#535353">
                <Grid Background="#363636">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition  Height="*" />
                        <RowDefinition  Height="*" />
                        <RowDefinition  Height="*" />
                        <RowDefinition  Height="2*" />
                        <RowDefinition  Height="*" />
                        <RowDefinition  Height="2*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Создание заявки на доставку" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="200" Foreground="#DEA558"/>
                    <Label Grid.Column="0" Grid.Row="1" Content="ФИО Клиента" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="120" Foreground="#DEA558"/>
                    <TextBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Height="25" TextWrapping="NoWrap" Text="" VerticalAlignment="Center" Width="470" x:Name="FIOTxt"/>
                    <Label Grid.Column="0" Grid.Row="2" Content="Выбор курьера" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="120" Foreground="#DEA558"/>
                    <ComboBox Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="300" x:Name="CurierCmb"/>
                    <Label Grid.Column="0" Grid.Row="3" Content="Адрес доставки" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="120" Foreground="#DEA558"/>
                    <TextBox Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Height="70" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="470" x:Name="AddressTxt"/>
                    <Label Grid.Column="0" Grid.Row="4" Content="Текст заявки" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="120" Foreground="#DEA558"/>
                    <TextBox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Height="25" TextWrapping="NoWrap" Text="" VerticalAlignment="Center" Width="470" x:Name="RequestTxt"/>
                    <Button Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Content="Создать" HorizontalAlignment="Center" Height="35" VerticalAlignment="Center" Width="150" Click="Button_Click_Create"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>